<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
  	<!--headerここから-->
  	<div id="slidemenu">
  		<nav class="nav navbar-default navbar-inverse text-white">
  			<div class="container">
  			<div class="navbar-header">

  				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample4">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#">Bookers</a>
			</div>

			<div class="collapse navbar-collapse" id="navbarEexample4">
  				<ul class="nav navbar-nav navbar-right">

  					<% if user_signed_in? %>
						<li><a href="/users/#{params[:id]}", method: :get>
							<span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span></a>
						</li>
  						<li><a href="#">
  							<span class="glyphicon glyphicon-user" aria-hidden="true"> Users</span></a>
  						</li>
  						<li><a href="#">
  							<span class="glyphicon glyphicon-book" aria-hidden="true"> Book</span></a>
  						</li>
  						<li>
  							<a class="glyphicon glyphicon-log-out" aria-hidden="true" rel="nofollow" data-method="delete" href="users/sign_out"> logout</a>
  						</li>

  					<% else %>

						<li><a href="/">
							<span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span></a>
						</li>
  						<li><a href="/home/about">
  							<span class="glyphicon glyphicon-link" aria-hidden="true"> About</span></a>
  						</li>
  						<li><a href="/users/sign_up">
  							<span class="glyphicon glyphicon-edit" aria-hidden="true"> sign up</span></a>
  						</li>
  						<li><a href="/users/sign_in">
  							<span class="glyphicon glyphicon-log-in" aria-hidden="true"> login</span></a>
  						</li>

  					<% end %>

  				</ul>
  			</div>
  			</div>
  		</nav>
  	</div>
  	<!--headerここまで-->

    <%= yield %>

    <!--フッターここから-->
	<footer>
		<div class="container">
			<div class="row">
				<div class="col-md-3 col-offset-9 navbar-right">
					<p>CopyRight Infratop.inc<p>
				</div>
			</div>
		</div>
	</footer>
	<!--フッターここまで-->

  </body>
</html>
