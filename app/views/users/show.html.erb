<body>

  <div class="body">
  	<div class="profile-containder">
  		<!--<p id=notice></p>-->
  		<div class="row col-xs-offset-1">
  			<div class="col-xs-3">
  				<!--user_profileここから-->
          <h2>User info</h2>
  				<%= attachment_image_tag @user, :profile_image, :fill,60, 60, format: 'jpeg' %>
  				<p>Name</p>
  				<%= @user.name %></h3>
  				<p>Introduction</p>
  				<%= @user.introduction %>
  				<div class="row">
  					<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench", aria-hidden="true", href='/users/:id/edit'></a>
  				</div>
          <!--User_profileここまで-->
          <!--投稿フォームここから-->

          <h2>New books</h2>
          <% if flash[:notice] %>
            <div class="flash">
              <%= flash[:notice] %>
            </div>
          <% end %>

          <%= form_with model: @book,local: true do |form| %>

            <h4>Title</h4>
            <div class="field">
              <%= form.text_field :title %>
            </div>
            <h4>Opinion</h4>
            <%= form.text_area :body %>
            <div class="action">
              <%= form.submit 'Create Book' %>
            </div>
          <% end %>

  			</div>
  			<div class="col-xs-8 bg-warning">
  				<h2>Books</h2>
  			</div>
  		</div>
	</div>
  </div>
</body>