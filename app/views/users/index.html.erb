<body>

  <div class="body">
  	<div class="containder">

		<div class="col-xs-3">
  				<!--user_profileここから-->
      		<h2>User info</h2>
        		<table class="table">
          		<thead>
            		<tr>
  				   		<th><%= attachment_image_tag @user, :profile_image, :fill,70, 70, format: 'jpeg' %></th>
              			<th colspan></th>
            		</tr>
          		</thead>
          		<tbody>
            		<tr>
  				    	<th>Name</th>
    				  	<th><%= @user.name %></th>
           			</tr>
    				<tr>
              			<th>Introduction</th>
  	   			  		<th><%= @user.introduction %></th>
            		</tr>
          		</tbody>
        		</table>
  		  			<div class="row">
                	<%= link_to sanitize('<i class="glyphicon glyphicon-wrench"></i>'), edit_user_path(current_user.id), class: "btn btn-default col-xs-12" %>
  				  	</div>
          <!--User_profileここまで-->
          <!--投稿フォームここから-->

          	<h2>New books</h2>

          		<%= form_with model: @book,local: true do |form| %>

            		<h4>Title</h4>
            		<div class="row col-xs-12">
              			<%= form.text_field :title %>
            		</div>
            		<h4>Opinion</h4>
            		<div class="row col-xs-12">
              			<%= form.text_area :body %>
           			</div>
            		<% if @user.id == current_user.id %>
              			<%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>

            		<% end %>
          		<% end %>

		</div>

  		<div class="row col-xs-offset-1">

    		<div class="col-xs-3 bg-warning">
    			<p>user info</p>
    		</div>

  			<div class="col-xs-8">
  				<h2>Users</h2>
  				<table class="table">
  					<thead>
  						<tr>
  							<th>image</th>
  							<th>name</th>
  							<th colspan="1"></th>
	  					</tr>
	  				</thead>
	  				<tbody>
	  					<% @users.each do |user| %>
	  						<tr>
								<td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg'%></td>
								<td><%= user.name %></td>
								<td><%= link_to "Show", show_user_path(user.id) %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>

  		</div>
	</div>
  </div>
</body>


