<body>

  <div class="body">
  	<div class="profile-containder">
  		<!--<p id=notice></p>-->
  		<div class="row col-xs-offset-1">
  			<div class="col-xs-3">
  				<!--user_profileここから-->
          <h2>User info</h2>

          <%= form_with model: @book,local: true do |form| %>


            <h4>Title</h4>
            <div class="field">
              <%= form.text_field :title %>
            </div>
            <h4>Opinion</h4>
            <%= form.text_area :body %>
            <div class="btn btn-primary col-xs-12">Create Book
            </div>
          <% end %>

  			</div>
  			<div class="col-xs-8 bg-warning">
  				<h2>Book detail</h2>
          <table class="table">
            <p><%= @book.title %></p>
            <P><%= @book.body %></P>
          </table>
  			</div>
  		</div>
	</div>
  </div>
</body>