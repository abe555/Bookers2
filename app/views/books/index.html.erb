<body>

  <div class="body">
  	<div class="profile-containder">

      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
  		<div class="row col-xs-offset-1">
  			<div class="col-xs-3">
  				<!--user_profileここから-->
          <!--User_profileここまで-->
          <!--投稿フォームここから-->

          <h2>New books</h2>

          <%= form_with model: @book,local: true do |form| %>

            <h4>Title</h4>
            <div class="field">
              <%= form.text_field :title %>
            </div>
            <h4>Opinion</h4>
            <%= form.text_area :body %>
            <div class="btn btn-primary col-xs-12">Create Book
            </div>
          <% end %>

  			</div>
  			<div class="col-xs-8 bg-warning">
  				<h2>Books</h2>
  			</div>
  		</div>
	</div>
  </div>
</body>