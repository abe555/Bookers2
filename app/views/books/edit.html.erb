<div class="container">
	<div class="row">
 
		<% if flash[:notice] %>
    		<div class="flash">
    			<%= flash[:notice] %>
    		</div>
		<% end %>

		<div class="col-md-6 col-md-offset-3">

			<%= form_with model: @book, url: book_path, local: true do |form| %>

				<h2>Editing Book</h2>
				<div class="field_row">
					<p>Title</p>
					<%= form.text_field :title %>
				</div>
				<div class="field_row">
					<p>Opinion</p>
					<%= form.text_area :body %>
				</div>
				<div class="action_row">
					<%= form.submit 'Update Book',  class: "btn btn-primary col-xs-12" %>
				</div>
			<% end %>

			<div class="row">
				<%= link_to 'Show', book_path(@book.id) %>
				<%= link_to 'Back', books_path %>
			</div>

	</div>



</div>